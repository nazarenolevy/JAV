<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hotelCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/hotelLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frameLayoutHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/hotelImageView"
                android:layout_width="wrap_content"
                android:layout_height="60dp" />

            <RatingBar
                android:id="@+id/stars"
                style="?attr/ratingBarStyleSmall"
                android:isIndicator="true"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/hotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:text="Nombre Hotel" />

        </FrameLayout>

        <TextView
            android:id="@+id/hotelRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frameLayoutHotel"
            android:gravity="left"
            android:text="Puntaje"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/hotelRating">

            <TextView
                android:id="@+id/exlusive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exclusivo para moviles"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/hotelPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Precio"
                />
        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>